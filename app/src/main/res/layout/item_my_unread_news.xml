<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_head1"
        android:layout_width="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_height="60dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_nickname1"
        android:text="SUNSHINE"
        android:layout_marginTop="10dp"
        android:textColor="#575757"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/iv_head1"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"
        android:id="@+id/iv_good1"
        android:layout_toRightOf="@+id/iv_head1"
        android:layout_below="@+id/tv_nickname1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_time1"
        android:text=""
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        android:textColor="#666666"
        android:gravity="center_vertical"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/iv_head1"
        android:layout_below="@+id/iv_good1"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_content1"
        android:singleLine="true"
        android:text=""
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:layout_marginLeft="7dp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_good1"
        android:layout_below="@+id/tv_nickname1"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_imageview11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginRight="5dp"
        />


</RelativeLayout>