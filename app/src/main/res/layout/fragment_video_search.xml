<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:attr/windowBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/video_search_editor"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:gravity="left|top"
                android:hint="@string/editor_hint"
                android:imeOptions="actionSearch"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:text="" />

            <com.fly.iconify.widget.IconTextView
                android:id="@+id/video_search_btn_clear"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/video_search_editor"
                android:layout_alignEnd="@+id/video_search_editor"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="{fal-times}"
                android:shadowColor="#22000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:textSize="28sp"
                android:textColor="#FFF"
                />

            <com.fly.iconify.widget.IconTextView
                android:id="@+id/video_search_btn_enter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/video_search_editor"
                android:layout_alignEnd="@+id/video_search_editor"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:text="{fal-search}"
                android:shadowColor="#22000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1"
                android:textSize="40sp"
                android:textColor="#FFF"
                />


        </RelativeLayout>
    </LinearLayout>

</FrameLayout>